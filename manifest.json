{
  "manifest_version": 2,
  "name": "Laguna Wallet",
  "version": "1.0.0",
  "description": "Laguna Polkadot Wallet",
  "permissions": ["background", "storage", "notifications", "alarms", "clipboardRead", "clipboardWrite", "idle", "tabs", "activeTab", " *://*.coingecko.com/* "],
  "browser_action": {
    "default_popup": "popup/index.html",
    "default_title": "Laguna Polkadot Wallet"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "64": "icons/icon-64.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "scripts": ["browser-polyfill.js", "background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "js": ["browser-polyfill.js", "content.js"],
      "matches": ["http://*/*", "https://*/*"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": ["page.js"],
  "content_security_policy": "script-src 'self' blob: 'unsafe-eval' 'wasm-eval'; object-src 'self'"
}
