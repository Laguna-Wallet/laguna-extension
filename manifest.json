{
  "manifest_version": 2,
  "name": "HydrogenX Wallet",
  "version": "1.0.0",
  "description": "HydrogenX Polkadot Wallet",
  "permissions": ["background", "storage", "notifications", "alarms", "clipboardRead", "clipboardWrite", "idle", "tabs", "<all_urls>"],
  "browser_action": {
    "default_popup": "popup/index.html",
    "default_title": "HydrogenX Polkadot Wallet"
  },
  "icons": {},
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval' 'sha256-...='; object-src 'self'"
}
