{
  "manifest_version": 3,
  "name": "HydrogenX Wallet",
  "version": "1.0.0",
  "description": "HydrogenX Polkadot Wallet",
  "host_permissions": ["<all_urls>"],
  "permissions": ["scripting", "storage", "activeTab", "notifications", "alarms", "clipboardRead", "clipboardWrite", "idle", "tabs"],
  "action": {
    "default_popup": "popup/index.html",
    "default_title": "Laguna Wallet"
  },
  "icons": {},
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["page.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "content_security_policy": "script-src 'self' 'sha256-...='; object-src 'self'"
  }
}
