{
  "manifest_version": 2,
  "name": "HydrogenX Wallet",
  "version": "1.0.0",
  "description": "HydrogenX Polkadot Wallet",
  "permissions": ["background", "storage", "notifications", "alarms", "clipboardRead", "clipboardWrite", "idle", "tabs", "activeTab", "<all_urls>"],
  "browser_action": {
    "default_popup": "popup/index.html",
    "default_title": "HydrogenX Polkadot Wallet"
  },
  "icons": {},
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["http://*/*", "https://*/*"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": ["page.js"],
  "content_security_policy": "script-src 'self' 'unsafe-eval' object-src 'self'"
}
