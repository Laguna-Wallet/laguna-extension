{
  "manifest_version": 2,
  "name": "HydrogenX Wallet",
  "version": "1.0.0",
  "description": "HydrogenX Polkadot Wallet",
  "permissions": ["background", "storage", "notifications", "alarms", "clipboardRead", "idle", "tabs", "<all_urls>"],
  "browser_action": {
    "default_popup": "popup/index.html",
    "default_title": "HydrogenX Polkadot Wallet"
  },
  "icons": {},
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' 'sha256-...='; object-src 'self'"
}
