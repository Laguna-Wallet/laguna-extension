{
  "name": "src",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "watch": "npm-run-all --parallel watch:*",
    "watch:background": "NODE_ENV=development webpack --config webpack.config.js -w",
    "watch:popup": "npm run watch:build --prefix src/popup",
    "build:background": "NODE_ENV=production webpack --config webpack.config.js",
    "build:popup": "INLINE_RUNTIME_CHUNK=false npm run build --prefix src/popup && cd src/popup/build && cpy * /static/* ../../../dist/popup --parents",
    "build": "npm run build:background && npm run build:popup",
    "clean": "rm -rf dist && cpy manifest.json dist && cpy src/assets/* dist/assets",
    "prebuild": "npm run clean",
    "prewatch": "npm run clean",
    "drive-upload-dev": "node ./scripts/uploader.js environment=DEV ",
    "drive-upload-prod": "node ./scripts/uploader.js environment=PROD"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/chrome": "0.0.176",
    "@types/node": "^17.0.8",
    "awesome-typescript-loader": "^5.2.1",
    "cpy-cli": "^3.1.1",
    "css-loader": "^6.5.1",
    "mini-css-extract-plugin": "^2.5.0",
    "node-sass": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "sass-loader": "^12.4.0",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "tslint": "^6.1.3",
    "typescript": "^4.2.4",
    "webpack": "^5.66.0",
    "webpack-cli": "^4.9.1"
  },
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@polkadot/api": "^7.6.1",
    "@polkadot/ui-keyring": "^1.0.1",
    "@polkadot/ui-settings": "^1.0.1",
    "archiver": "^5.3.0",
    "axios": "^0.25.0",
    "dotenv": "^14.2.0",
    "googleapis": "^92.0.0"
  }
}
